<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Group?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="assignment4.window.WindowController"
            prefHeight="600.0" prefWidth="800.0">

    <!-- Top: MenuBar -->
    <top>
        <VBox>

            <!-- MenuBar -->
            <MenuBar>
                <menus>
                    <Menu text="File">
                        <items>
                            <MenuItem fx:id="saveMenuItem" onAction="#handleSave" text="Save As Newick..." />
                            <MenuItem fx:id="closeMenuItem" onAction="#handleClose" text="Close" />
                        </items>
                    </Menu>

                    <Menu text="Layout">
                        <items>
                            <MenuItem fx:id="toggleFullScreenMenuItem" onAction="#handleToggleFullScreen" text="Full Screen" />
                            <MenuItem fx:id="fitMenuItem" onAction="#handleFit" text="Fit" />
                            <MenuItem fx:id="expandMenuItem" onAction="#handleExpand" text="Expand" />
                        </items>
                    </Menu>
                </menus>
            </MenuBar>

            <!-- Layout Toggle and Buttons -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
                <padding>
                    <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
                </padding>
                <RadioButton fx:id="equalDepthRadio" text="Equal Leaf Depth" />
                <RadioButton fx:id="uniformLengthRadio" text="Uniform Edge Length" />
                <Button fx:id="fitButton" text="Fit" onAction="#handleFit"/>
                <Button fx:id="expandButton" text="Expand" onAction="#handleExpand"/>
            </HBox>
        </VBox>
    </top>

    <!-- Center: Drawing area -->
    <center>
        <ScrollPane fx:id="scrollPane" fitToWidth="true" fitToHeight="true">
            <StackPane fx:id="stackPane" prefHeight="400.0" prefWidth="600.0">
                <Group fx:id="mainGroup">
                    <children>
                        <Group fx:id="edgeGroup"/>
                        <Group fx:id="nodeGroup"/>
                        <Group fx:id="labelGroup"/>
                    </children>
                </Group>
            </StackPane>
        </ScrollPane>
    </center>

    <!-- Bottom: Node stats -->
    <bottom>
        <HBox spacing="10">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
            <Label text="Nodes:"/>
            <Label fx:id="nodeCountLabel" text="0"/>
            <Label text="Edges:"/>
            <Label fx:id="edgeCountLabel" text="0"/>
            <Label text="Leaves:"/>
            <Label fx:id="leafCountLabel" text="0"/>
        </HBox>
    </bottom>
</BorderPane>
