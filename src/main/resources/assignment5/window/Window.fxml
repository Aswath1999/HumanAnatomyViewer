<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="assignment5.window.WindowController">
    <children>
        <BorderPane fx:id="mainBorderPane" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <top>
                <VBox prefHeight="39.0" prefWidth="600.0" BorderPane.alignment="CENTER">
                    <children>
                        <MenuBar BorderPane.alignment="CENTER">
                            <menus>
                                <Menu mnemonicParsing="false" text="File">
                                    <items>
                                        <MenuItem fx:id="menuOpen" mnemonicParsing="false" text="Open..." />
                                        <MenuItem fx:id="menuClose" mnemonicParsing="false" text="Close">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="X" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                            </accelerator>
                                        </MenuItem>
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="View">
                                    <items>
                                        <MenuItem fx:id="menuReset" mnemonicParsing="false" text="Reset">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="Z" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="menuZoomIn" mnemonicParsing="false" text="Zoom in">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="I" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="menuZoomOut" mnemonicParsing="false" text="Zoom Out">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="O" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="menuRotateLeft" mnemonicParsing="false" text="Rotate Left">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="LEFT" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="menuRotateRight" mnemonicParsing="false" text="Rotate Right">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="RIGHT" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="menuRotateUp" mnemonicParsing="false" text="Rotate Up">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="UP" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                            </accelerator>
                                        </MenuItem>
                                        <MenuItem fx:id="menuRotateDown" mnemonicParsing="false" text="Rotate Down">
                                            <accelerator>
                                                <KeyCodeCombination alt="UP" code="DOWN" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                            </accelerator>
                                        </MenuItem>
                                    </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Help">
                                    <items>
                                        <MenuItem mnemonicParsing="false" text="About" />
                                    </items>
                                </Menu>
                            </menus>
                        </MenuBar>
                        <ToolBar prefHeight="97.0" prefWidth="569.0">
                            <items>
                                <Button fx:id="resetButton" mnemonicParsing="false" text="Reset" />
                                <Separator orientation="VERTICAL" prefHeight="0.0" prefWidth="5.0" />
                                <Button fx:id="zoomInButton" mnemonicParsing="false" text="Zoom In" />
                                <Button fx:id="zoomOutButton" mnemonicParsing="false" text="Zoom Out" />
                                <Separator orientation="VERTICAL" prefHeight="0.0" />
                                <Button fx:id="rotateLeftButton" mnemonicParsing="false" text="Rotate Left" />
                                <Button fx:id="rotateRightButton" mnemonicParsing="false" text="Rotate Right" />
                                <Button fx:id="rotateUpButton" mnemonicParsing="false" text="Rotate Up" />
                                <Button fx:id="rotateDownButton" mnemonicParsing="false" text="Rotate Down" />
                            </items>
                        </ToolBar>
                    </children>
                </VBox>
            </top>
            <bottom>
                <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
                    <items>
                        <Pane prefHeight="0.0" prefWidth="520.0" />
                        <Button fx:id="closeButton" text="Close" />
                    </items>
                </ToolBar>
            </bottom>
            <center>
                <StackPane fx:id="centerPane" minHeight="0.0" minWidth="0.0" prefHeight="400.0" prefWidth="600.0" BorderPane.alignment="CENTER" />
            </center>
        </BorderPane>
    </children>
</AnchorPane>
